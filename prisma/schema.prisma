// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Municipio {
  id                        Int         @id
  nome                      String
  microrregiao_id           Int
  microrregiao_nome         String
  mesorregiao_id            Int
  mesorregiao_nome          String
  regiao_imediata_id        Int
  regiao_imediata_nome      String
  regiao_intermediaria_id   Int
  regiao_intermediaria_nome String
  uf_id                     Int
  uf_sigla                  String
  uf_nome                   String
  partos                    Parto[]
  predicoes                 Predicao[]

  @@map("municipios")
}

model Parto {
  id                        Int         @id @default(autoincrement())
  ano                       Int
  mes                       Int
  parto_normais             Int
  parto_cesaria             Int
  parto_total               Int
  municipio                 Municipio   @relation(fields: [municipio_id], references: [id])
  municipio_id              Int

  @@map("partos")
}

model Predicao {
  id                        Int         @id @default(autoincrement())

  // Colocar o tipo de parto que a predição se refere (normal, cesária, total)
  tipo_parto                String

  lower                     Int
  upper                     Int
  pred                      Int

  // Mês da predição relativo ao mês atual
  // eg.: Mês atual = Maio, prox_mes = 1 = Junho, prox_mes = 3 = Setembro
  prox_mes                  Int

  municipio                 Municipio   @relation(fields: [municipio_id], references: [id])
  municipio_id              Int

  @@map("predicoes")
}
